<h1>Display your Pirate here</h1>
<p><%= @pirate.name %></p>
<p><%= @pirate.weight %></p>
<p><%= @pirate.height %></p>

<h2>Display your first ship here</h2>
<% @ships.each_with_index do |ship, index| %>
    <% if index == 0 %>
        <%= ship.name %>
        <%= ship.type %>
        <%= ship.booty %>
    <% end %>
<% end %>



<h2>Display your second ship here</h2>
<% @ships.each_with_index do |ship, index| %>
    <% if index == 1 %>
        <%= ship.name %>
        <%= ship.type %>
        <%= ship.booty %>
    <% end %>
<% end %>