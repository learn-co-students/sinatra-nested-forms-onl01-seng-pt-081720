<h1>Pirate:</h1>

<div class="pirate">
    <h4>Name: <%= @pirate.name %></h4>
    <p>Weight: <%= @pirate.weight %></p>
    <p>Height: <%= @pirate.height %></p>
</div><br>

<h1>Ships:</h1>

<h2>First Ship</h2>
<% @ships.each.with_index do |ship, index| %>
    <div class="ship">
        <% if index == 0 %>
                <p>Name: <%= ship.name %></p>
                <p>Type: <%= ship.type %></p>
                <p>Booty: <%= ship.booty %></p>
        <% end %>
    <% end %>
</div>


<h2>Second Ship</h2>
<% @ships.each.with_index do |ship, index| %>
    <div class="ship">
        <% if index == 1 %>
                <p>Name: <%= ship.name %></p>
                <p>Type: <%= ship.type %></p>
                <p>Booty: <%= ship.booty %></p>
        <% end %>
    <% end %>
</div>
