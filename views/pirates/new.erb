<h1>Pirates, ARG!</h1>

<form action="/pirates" method="post">

    <h2>Pirate Info:</h2>

    <p><label for="pirate_name">Pirate Name:</label>
    <input type="text" name="pirate[name]" id="pirate_name"></p>
    <p><label for="pirate_weight">Pirate Weight:</label>
    <input type="text" name="pirate[weight]" id="pirate_weight"></p>
    <p><label for="pirate_height">Pirate Height:</label>
    <input type="text" name="pirate[height]" id="pirate_height"></p>

    <h2>Ship Info:</h2>

    <h3>First Ship</h3>

    <p><label for="ship_name_1">Ship Name:</label>
    <input type="text" name="pirate[ships][][name]" id="ship_name_1"></p>
    <p><label for="ship_type_1">Ship Type:</label>
    <input type="text" name="pirate[ships][][type]" id="ship_type_1"></p>
    <p><label for="ship_booty_1">Ship Booty:</label>
    <input type="text" name="pirate[ships][][booty]" id="ship_booty_1"></p>

    <br>
    <h3>Second Ship</h3>

    <p><label for="ship_name_2">Ship Name:</label>
    <input type="text" name="pirate[ships][][name]" id="ship_name_2"></p>
    <p><label for="ship_type_2">Ship Type:</label>
    <input type="text" name="pirate[ships][][type]" id="ship_type_2"></p>
    <p><label for="ship_booty_2">Ship Booty:</label>
    <input type="text" name="pirate[ships][][booty]" id="ship_booty_2"></p>

    <input type="submit" id="Submit">

</form>
